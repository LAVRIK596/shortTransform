{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Delete temporary directories",
            "type": "shell",
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "${workspaceFolder}/build",
                    "${workspaceFolder}/documentation"
                ]
            },
        },
        {
            "label": "Generate documentation",
            "type": "shell",
            "linux": {
                "command": "doxygen",
            },
            "args": [
                "${workspaceFolder}/Doxyfile"
            ]
        },
        {
            "label": "(Debug) CMake assembling",
            "type": "shell",
            "linux": {
                "command": "cmake",
            },
            "args": [
                "${workspaceFolder}/CMakeLists.txt",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "label": "(Release) CMake assembling",
            "type": "shell",
            "linux": {
                "command": "cmake",
            },
            "args": [
                "${workspaceFolder}/CMakeLists.txt",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Release"
            ]
        },
        {
            "label": "(Debug) CMake compiling",
            "type": "shell",
            "linux": {
                "command": "cmake",
            },
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ]
        },
        {
            "label": "(Release) CMake compiling",
            "type": "shell",
            "linux": {
                "command": "cmake",
            },
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ]
        },
        {
            "label": "(Debug) CMake assembling && CMake compiling",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "(Debug) CMake assembling",
                "(Debug) CMake compiling"
            ]
        },
        {
            "label": "(Release) CMake assembling && CMake compiling",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "(Release) CMake assembling",
                "(Release) CMake compiling"
            ]
        }
    ]
}